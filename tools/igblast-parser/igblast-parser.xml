<tool id="igblast-parser" name="convert igblast output into simple csv table" version="0.1.0" python_template_version="3.8">
    <requirements>
        <requirement type="package" version="0.0.3">igblast-parser</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        igblast-parser --in '$input1' --out tmp && mv tmp.csv '$output1';
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="txt" />
    </inputs>
    <outputs>
        <data name="output1" format="csv" /> <!--from_work_dir="parser_output.csv" />-->
    </outputs>
    <tests>
        <test>
            <param name="input1" value="igblast_output.txt" ftype="txt" />
            <output name="output1" file="parser_output.csv"/>
        </test>
    </tests>
    <help><![CDATA[
        
 igblast_output | python <this script> --out <out_filename_prefix>

                  python <this script --in <igblast_output> --out <out_filename_prefix>

    ]]></help>
